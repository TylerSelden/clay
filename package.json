  "scripts": {
    "test": "electron .",
    "build": "node ./tools/gameBuilder.js ./Clay/game.canvas ./src/assets/game.json"
  },
  "author": "Kaius Hartala <kaiushartala@gmail.com>",
  "license": "MIT",
  "build": {
    "appId": "com.kaius.clay",
    "productName": "The Clay Files",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons",
      "category": "Game"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./build/icons/256x256.ico",
      "uninstallerIcon": "./build/icons/256x256.ico",
      "installerHeaderIcon": "./build/icons/256x256.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "The Clay Files"
    },
    "mac": {
      "target": "dmg",
      "category": "Game"
    },
    "files": [
      "./**/*"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^21.2.0"
  }
}
